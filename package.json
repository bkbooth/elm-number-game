    "elm-webpack-loader": "^4.3.1",
    "html-webpack-plugin": "^2.28.0",
    "rimraf": "^2.6.1",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^3.1.11",
    "webpack-merge": "^4.1.0"
  },
  "engines": {
    "node": ">= 6.0.0"
  }
}
